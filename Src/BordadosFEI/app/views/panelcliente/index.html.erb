<div class="col-sm-1"></div>
<div class="col-sm-10">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Pedidos</h3>
    </div>
    <% if notice != nil %>
      <div class="alert alert-info" role="alert">
        <%= notice %>
      </div>
    <% else %>
      <% if alert != nil %>
        <div class="alert alert-info" role="alert">
          <%= alert %>
        </div>
      <% end  %>
    <% end %>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha del pedido</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @cliente.Pedidos.each do |pedido| %>
              <% if pedido.Pago == nil %>
                <tr>
 	                <td><%= pedido.id %></td>
                    <td><%= pedido.FechaPedido %></td>
                    <td><%= link_to 'Mostrar', pedido, class: 'btn btn-primary' %></td>

                </tr>
              <% end %>
            <% end %>
   	    </tbody>
    </table>
    <div class="panel-footer">
        <%= link_to 'Regresar', :back, class: "btn btn-info" %>
        <%= link_to 'Nuevo Pedido', new_pedido_path(Cliente: @cliente.id), class: "btn btn-success" %>
    </div>
    </div>
    </div>
<div class="col-sm- 4"></div>

