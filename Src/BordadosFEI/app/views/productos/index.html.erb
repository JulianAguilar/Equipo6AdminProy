<div class="panel panel-default">
  <div class="panel-heading"><h1>Productos</h1></div>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Costo</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.Nombre %></td>
        <td><%= producto.Descripcion %></td>
        <td><%= producto.Costo %></td>
        <td><%= link_to 'Mostrar', producto, class: "btn btn-primary btn-xs" %>
        <%= link_to 'Editar', edit_producto_path(producto), class: "btn btn-success btn-xs" %>
				<%= link_to 'Eliminar', producto, method: :delete, data: { confirm: 'Â¿Deseas eliminarlo?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="panel-footer">
<%= link_to 'Nuevo Producto', new_producto_path, class: "btn btn-primary" %>
</div>
</div>
