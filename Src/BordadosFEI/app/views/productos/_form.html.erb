<%= form_for(@producto,html: {class: 'form-horizontal'}) do |f| %>
<% if @producto.errors.any? %>
    <div class="form-group">
      <div class="col-sm-2"></div>
      <div  class=" col-sm-10 ">
        <div class="alert alert-danger">
          <% if @producto.errors.count > 1 %>
            <h3>Han ocurrido <%= @producto.errors.count %>  errores:</h3>
          <% else %>
            <h3>Han ocurrido un error:</h3>
          <% end %>
          <ul>
            <% @producto.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :Nombre , class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Descripcion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :Descripcion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Costo , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :Costo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-2">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
