<div class="container">
<div class="col-sm-1"></div>
<div class="col-sm-10">
  <div class="panel panel-default">
    <div class="panel-heading">
    <p>
        <strong>Mercancia</strong>
    </p>
  </div>  
  <div class="panel-body">
    <% if notice != nil %>
      <div class="alert alert-info" role="alert">
          <%= notice %>
      </div>
    <% else %>
      <% if alert != nil %>
        <div class="alert alert-info" role="alert">
            <%= alert %>
          </div>
      <% end  %>
    <% end %>

    <strong>Descripcion:</strong>
      <%= @mercancia.Descripcion %>
    </p>
    <p>
    <strong>Cantidad:</strong>
      <%= @mercancia.Cantidad %>
    </p>
    <p>
      <strong>Producto:</strong>
      <%= @mercancia.Producto.Nombre %>
    </p>
    <p>
      <strong>Pedido:</strong>
      <%= @mercancia.Pedido.id %>
    </p>
  </div>
  <div class="panel-footer">
    <%= #link_to 'Edit', edit_mercancia_path(@mercancia) %> 
    <%= link_to 'Pedido', pedido_path(@mercancia.Pedido), class: "btn btn-primary" %>
    <%= link_to 'Back', :back, class: "btn btn-info" %>
  </div>
</div>
</div>
</div>