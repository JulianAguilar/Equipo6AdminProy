<%= form_for @mercancia, :html => { :class => "form-horizontal mercancia" } do |f| %>

    <% if @mercancia.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@mercancia.errors.count, "error") %> prohibited this mercancia from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @mercancia.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :Nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Nombre, :class => 'form-control' %>
    </div>
    <%= error_span(@mercancia[:Nombre]) %>
  </div>
  <div class="control-group">
    <%= f.label :Descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Descripcion, :class => 'form-control' %>
    </div>
    <%= error_span(@mercancia[:Descripcion]) %>
  </div>
  <div class="control-group">
    <%= f.label :Cantidad, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Cantidad, :class => 'form-control' %>
    </div>
    <%= error_span(@mercancia[:Cantidad]) %>
  </div>
  <div class="control-group">
    <%= f.label :Precio, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Precio, :class => 'form-control' %>
    </div>
    <%= error_span(@mercancia[:Precio]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            mercancias_path, :class => 'btn btn-default' %>

<% end %>
