<div class="panel panel-default">
<div class="panel-heading">
        <h2>Actualizar datos</h2>
</div>

<div class="panel-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', method: :put }) do |f| %>
  <%= devise_error_messages! %>

	<div class="form-group">
    <%= f.label :Nombre, class: "col-sm-2 control-label"%>
    <div class="col-sm-10" >
    <%= f.text_field :Nombre, class: "form-control" %>
  </div>
	</div>
	
	<div class="form-group">
    <%= f.label :Direccion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10" >
    <%= f.text_field :Direccion , class: "form-control" %>
  </div>
  </div>
	
	<div class="form-group">
    <%= f.label :Telefono, class: "col-sm-2 control-label" %>
    <div class="col-sm-10" >
    <%= f.text_field :Telefono , class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :email,class: "col-sm-2 control-label" %>
    <div class="col-sm-10" >
    <%= f.email_field :email, class: "form-control" %>
  </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
   <div class="col-sm-2" > <%= f.label :password,class: "control-label" %> <i>(Dejalo en blanco si no lo deeas cambiar)</i><br /></div>
   <div class="col-sm-10" >
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation,class: "col-sm-2 control-label" %>
    <div class="col-sm-10" >
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2" ><%= f.label :current_password, class: "control-label" %> <i>(Neceitamos tu password actual para confirmar los cambios)</i></div>
    <div class="col-sm-10" >
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2" ></div>
    <div class="col-sm-2" >
      <%= f.submit "Actualizar",class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
</div>
<div class="panel-footer">
<h3>Cancelar mi cuenta</h3>

<p><%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "Â¿Estas seguro?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Regresar", :back %>
</div>
</div>