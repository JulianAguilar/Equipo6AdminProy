  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Cliente</h2>
      </div> <!-- heading -->
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { :class => "form-horizontal proveedor"  }) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :Nombre, :class => 'form-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.text_field :Nombre, :class => 'form-control' %>
            </div>
            <br>
          </div>
          <div class="form-group">
            <%= f.label :Direccion, :class => 'form-label col-sm-2' %> 
            <div class="col-sm-10">
              <%= f.text_field :Direccion, :class => 'form-control' %>
            </div>

          </div>
          <div class="form-group">
            <%= f.label :Telefono, :class => 'form-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.text_field :Telefono , :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, :class => 'form-label col-sm-2' %> 
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-2">
              <%= f.label :password, :class => 'form-label ' %> <br/>
              <% if @validatable %>
                <em>(<%= @minimum_password_length %> caracteres minimo)</em>
              <% end %>
            </div>
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, :class => 'form-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
              <%= f.submit "Registrar", :class => 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= render "Clientes/shared/links" %>
        <%= link_to "Regresar", :back %>
      </div> <!-- panel-footer -->
    </div> 
  </div>