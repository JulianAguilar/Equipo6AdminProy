<div class="panel panel-default">
<div class="panel-heading">
				<h2>Registra en el sistema</h2>
</div>

<div class="panel-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: 'form-horizontal'})  do |f| %>
    <% if resource.errors.any? %>
   <div class="form-group">
     <div class="col-sm-2"></div>
     <div  class=" col-sm-8 ">
         <div class="alert alert-danger">
                 <% if resource.errors.count > 1 %>
           <h3>Han ocurrido <%= resource.errors.count %>  errores:</h3>
         <% else %> 
           <h3>Han ocurrido un error:</h3>
         <% end %>
         <ul>
           <% resource.errors.full_messages.each do |message| %>
               <li><%= message %></li>
           <% end %>
         </ul>
       </div>
     </div>
   </div>
   <br>
  <% end %>
	
 	<div class="form-group">
		<%= f.label :Nombre , class: "col-sm-2 control-label" %>
		<div class="col-sm-8">
    	<%= f.text_field :Nombre, class: "form-control" %>
		</div>
	</div>
	
 	<div class="form-group"> 
		<%= f.label :Direccion , class: "col-sm-2 control-label" %>
		<div class="col-sm-8">
	    <%= f.text_field :Direccion, class: "form-control" %>
		</div>
  </div>
	
 	<div class="form-group">
		<%= f.label :Telefono , class: "col-sm-2 control-label" %>
	 	<div class="col-sm-8">
  	  <%= f.text_field :Telefono, class: "form-control" %>
		</div>
  </div>

 	<div class="form-group"> 
		<%= f.label :email , class: "col-sm-2 control-label" %>
		<div class="col-sm-8">
    	<%= f.email_field :email, class: "form-control" %>
		</div>
  </div>

	<div class="form-group">
		<div class="col-sm-2 control-label" >
		<%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
		<% end %>
		</div>
		<div class="col-sm-8">
    	<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
		</div>
  </div>

  <div class="form-group">
					<%= f.label :password_confirmation , class: "col-sm-2 control-label" %>
		<div class="col-sm-8">
					<%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control" %>
		</div>
  </div>

	<div class="form-group">
		<div class="col-sm-2"></div>			
		<div class="col-sm-2">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>

</div>
<div class="panel-footer">
<%= render "Clientes/shared/links" %>

</div>
</div>
