<h1>Listing materiales</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Cantidad</th>
      <th>Unidad</th>
      <th>Costo unidad</th>
      <th>Costo total</th>
      <th>Proveedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materiales.each do |material| %>
      <tr>
        <td><%= material.Nombre %></td>
        <td><%= material.Descripcion %></td>
        <td><%= material.Cantidad %></td>
        <td><%= material.Unidad %></td>
        <td><%= material.Costo_Unidad %></td>
        <td><%= material.Costo_Total %></td>
        <td><%= material.proveedor %></td>
        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

