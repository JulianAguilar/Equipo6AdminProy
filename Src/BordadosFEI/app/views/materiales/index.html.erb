<h1>Listing materiales</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Cantidad</th>
      <th>Unidad</th>
      <th>Costo unidad</th>
      <th>Costo total</th>
      <th>Proveedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materiales.each do |material| %>
      <tr>
        <td><%= material.Nombre %></td>
        <td><%= material.Descripcion %></td>
        <td><%= material.Cantidad %></td>
        <td><%= material.Unidad %></td>
        <td><%= material.CostoUnidad %></td>
        <td><%= material.CostoTotal %></td>
        <td><%= material.Proveedor.Nombre %></td>
        <td><%= link_to 'Mostrar', material %></td>
        <td><%= link_to 'Editar', edit_material_path(material) %></td>
        <td><%= link_to 'Eliminar', material, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

