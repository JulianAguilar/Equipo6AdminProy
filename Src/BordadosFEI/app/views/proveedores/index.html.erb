<h1>Listing proveedores</h1>

<table>
  <thead>
    <tr>
      <th>Rfc</th>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedores.each do |proveedor| %>
      <tr>
        <td><%= proveedor.RFC %></td>
        <td><%= proveedor.Nombre %></td>
        <td><%= proveedor.Direccion %></td>
        <td><%= proveedor.Telefono %></td>
        <td><%= link_to 'Mostra', proveedor %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor) %></td>
        <td><%= link_to 'Eliminar', proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Proveedor', new_proveedor_path %>
