<div class="container">
<div class="col-sm-1"></div>
<div class="col-sm-10">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Proveedores</h3>
    </div>
    <% if notice != nil %>
      <div class="alert alert-info" role="alert">
        <p id="notice"><%= notice %></p>
      </div>
    <% end %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Rfc</th>
          <th>Nombre</th>
          <th>Direccion</th>
          <th>Telefono</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @proveedores.each do |proveedor| %>
          <tr>
            <td><%= proveedor.RFC %></td>
            <td><%= proveedor.Nombre %></td>
            <td><%= proveedor.Direccion %></td>
            <td><%= proveedor.Telefono %></td>
            <td><%= link_to 'Show', proveedor, class: "btn btn-info btn-xs" %> </td>
            <td><%= link_to 'Edit', edit_proveedor_path(proveedor), class: "btn btn-primary btn-xs" %></td>
            <td><%= link_to 'Destroy', proveedor, method: :delete, data: { confirm: 'Â¿Estas seguro?' } , class: "btn btn-danger btn-xs"%></td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <div class="panel-footer">
      <%= link_to 'Nuevo Proveedor', new_proveedor_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
</div>