<div class="panel panel-default">
  <div class="panel-heading"><h1>Proveedores</h1></div>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Rfc</th>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedores.each do |proveedor| %>
      <tr>
        <td><%= proveedor.RFC %></td>
        <td><%= proveedor.Nombre %></td>
        <td><%= proveedor.Direccion %></td>
        <td><%= proveedor.Telefono %></td>
        <td><%= link_to 'Mostra', proveedor, class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor), class: "btn btn-success btn-xs" %></td>
        <td><%= link_to 'Eliminar', proveedor, method: :delete, data: { confirm: 'Â¿Estas seguro?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="panel-footer">
<%= link_to 'Nuevo Proveedor', new_proveedor_path, class: "btn btn-success" %>
</div>
