<%= form_for(@proveedor,html: {class: 'form-horizontal'})  do |f| %>
  <% if @proveedor.errors.any? %>
    <div class="form-group">
      <div class="col-sm-2"></div>
        <div  class=" col-sm-6 ">
          <div class="alert alert-danger">
            <% if @proveedor.errors.count > 1 %>
              <h3>Han ocurrido <%= @proveedor.errors.count %>  errores:</h3>
            <% else %>
              <h3>Han ocurrido un error:</h3>
            <% end %>
            <ul>
              <% @proveedor.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>


  <div class="form-group">
    <%= f.label :RFC, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :RFC, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :Nombre, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Direccion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :Direccion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Telefono, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :Telefono, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2"></div>      
    <div class="col-sm-2">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
