<h2>Registra empleado</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "form-horizontal proveedor"  })  do |f| %>
  <%= devise_error_messages! %>
<div class="control-group">
					<%= f.label :Nombre, :class => 'form-label' %> <br/>
					<%= f.text_field :Nombre, :class => 'form-control' %>
	</div>
	<div class="control-group">
					<%= f.label :Apellido_paterno, :class => 'form-label' %> <br/>
					<%= f.text_field :Apellido_paterno,  :class => 'form-control' %>
	</div>
	<div class="control-group">
					<%= f.label :Apellido_materno, :class => 'form-label' %> <br/>
					<%= f.text_field :Apellido_materno,  :class => 'form-control' %>
	</div>
	<div class="control-group">
					<%= f.label :Direccion, :class => 'form-label' %> <br/>
					<%= f.text_field :Direccion, :class => 'form-control' %>

	</div>
	<div class="control-group">
					<%= f.label :Telefono, :class => 'form-label' %> <br/>
					<%= f.text_field :Telefono , :class => 'form-control' %>

	</div>
	<div class="control-group">
					<%= f.label :Puesto, :class => 'form-label' %> <br/>
					<%= 
									f.select :Puesto, options_for_select([['Gerente general','Gerente general'],['Vendedor de mostrador','Vendedor de mostrador'],['Empleado de serigrafia','Empleado de serigrafia'],['Bordadora','Bordadora']],:selected => f.object.Puesto),{},{class: 'form-control'}  %> 
 	<div class="field">
    <%= f.label :email %><br />
		<%= f.email_field :email, :class => 'form-control' %>
	</div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
		<%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>  
</div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>  
	</div>

  <div class="actions">
					<%= f.submit "Crear cuenta", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "Empleados/shared/links" %>
