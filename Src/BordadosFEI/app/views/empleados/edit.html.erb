<div class="panel panel-default">
<div class="panel-heading">
<h2>Actualiza empleado</h2>
</div>
<div class="panel-body">
<%= form_for @empleado, url: {action: "update"}, html: {class: 'form-horizontal'} do |f| %>

  <% if @empleado.errors.any? %>
   <div class="form-group">
     <div class="col-sm-2"></div>
     <div  class=" col-sm-8 ">
         <div class="alert alert-danger">
                 <% if @empleado.errors.count > 1 %>
           <h3>Han ocurrido <%= @empleado.errors.count %>  errores:</h3>
         <% else %> 
           <h3>Han ocurrido un error:</h3>
         <% end %>
         <ul>
           <% @empleado.errors.full_messages.each do |message| %>
               <li><%= message %></li>
           <% end %>
         </ul>
       </div>
     </div>
   </div>
   <br>
  <% end %>
	
	<div class="form-group">
    <%= f.label :Nombre , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :Nombre, autofocus: true , class: "form-control" %>
  	</div>
  </div>
	
 	<div class="form-group">
    <%= f.label :Direccion , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :Direccion, autofocus: true , class: "form-control" %>
  </div>
	</div>

 	<div class="form-group">
    <%= f.label :Telefono , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :Telefono, autofocus: true , class: "form-control" %>
    </div>
	</div>
	
	<div class="form-group">
		<%= f.label 'Puesto', class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.collection_select(:role, Empleado::ROLES, :to_s, lambda{|i| i.to_s.humanize},class: "form-control" )%>
		</div>
	</div>

	<div class="form-group">
    <%= f.label :Sueldo , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :Sueldo, autofocus: true , class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :email , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true , class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
    <div class="">
    <%= f.label :password , class: " col-sm-2 control-label" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %>
  </div>
  <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control" %>
    </div>
	</div>

  <div class="form-group">
   <div class="col-sm-2"></div>      
   <div class="col-sm-2">
     <%= f.submit "Actualizar",class: "btn btn-primary" %>
   </div>
 </div>
<% end %></p>
<div class="panel-footer"><%= link_to 'Regresar', :back, class: "btn btn-success"%></div>
</div>
</div>
