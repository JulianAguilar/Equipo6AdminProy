<h1>Cliente <%= @pedido.Cliente.Nombre %></h1>
<%= @pedido.FechaPedido %>
<table>
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Descripcion</th>
			<th>Cantidad</th>
			<th>Total</th>
			<th>Eliminar</th>
		</tr>
	</thead>
	<tbody>
		<% @pedido.Mercancias.each do |mercancia|  %>
			<tr>
							<td><%= mercancia.Producto.Nombre %></td>
							<td><%= mercancia.Descripcion %></td>
							<td><%= mercancia.Cantidad %></td>
							<td><%= mercancia.Producto.Costo * mercancia.Cantidad %></td>
							<td><%= link_to 'Eliminar', mercancia, method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<% if !@pedido.Confirmado %>
	<%= link_to 'Agregar mercancia',new_mercancia_path(Pedido: @pedido.id) %>
	<%= link_to 'Confirmar pedido', controller: "pedidos",action: "confirma",id: @pedido%>
<% end %>
<%= link_to 'Regresar',root_path %>
