<%- model_class = Empleado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
			<th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
			<th><%= model_class.human_attribute_name(:Nombre) %></th>
			<th><%= model_class.human_attribute_name(:Apellido_paterno) %></th>
			<th><%= model_class.human_attribute_name(:Apellido_materno) %></th>
      <th><%= model_class.human_attribute_name(:Direccion) %></th>
      <th><%= model_class.human_attribute_name(:Telefono) %></th>
      <th><%= model_class.human_attribute_name(:Puesto) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
							<td><%= link_to empleado.id, opempleado_path(empleado), :action => :show %></td> 
				<td><%= empleado.email %></td>
				<td><%= empleado.Nombre %></td>
				<td><%= empleado.Apellido_paterno %></td>
				<td><%= empleado.Apellido_materno %></td>
        <td><%= empleado.Direccion %></td>
        <td><%= empleado.Telefono %></td>
        <td><%= empleado.Puesto %></td>
				<td>
						<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_empleado_registration_path(empleado), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), opempleado_path(empleado),    :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
                  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/><br/>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_empleado_registration_path,
						:class => 'btn btn-primary' %>
